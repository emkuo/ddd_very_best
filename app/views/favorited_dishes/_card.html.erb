<div class="card mb-3">
  <h2 class="card-header h4">
    Favorited Dish #<%= favorited_dish.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= favorited_dish.name %></dd>

      <dt>Cuisine</dt>
      <dd><%= favorited_dish.cuisine %></dd>

      <dt>Venues</dt>
      <dd><%= favorited_dish.venues_id %></dd>

      <dt>User</dt>
      <dd><%= favorited_dish.user_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back favorited_dish, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_favorited_dish_url(favorited_dish), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to favorited_dish, method: :delete, data: { confirm: "Do you really want to delete this favorited_dish?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(favorited_dish.updated_at) %> ago
  </div>
</div>
